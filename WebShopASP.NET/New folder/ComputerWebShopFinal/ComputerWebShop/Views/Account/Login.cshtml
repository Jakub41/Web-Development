@model ComputerWebShop.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="account_grid">
        <div class=" login-right">
            <h3>REGISTERED CUSTOMERS</h3>
            <p>If you have an account with us, please log in.</p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary(true)
                <div>
                    <span>Email Address<label>*</label></span>
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div>
                    <span>Password<label>*</label></span>
                    @Html.TextBoxFor(m => m.Password, new { type="password"})
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <input type="submit" value="Log in" class="btn btn-default" />
            }
            <a class="forgot" href="@Url.Action("EnterEmail","Account")">Forgot Your Password?</a>

        </div>
        <div class=" login-left">
            <h3>NEW CUSTOMERS</h3>
            <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
            <a class="acount-btn" href="~/Account/Register">Create an Account</a>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="sub-cate">
        @{ Html.RenderAction("CategoryList", "Home");}
        <!--initiate accordion-->
        <script type="text/javascript">
            $(function () {
                var menu_ul = $('.menu > li > ul'),
			           menu_a = $('.menu > li > a');
                menu_ul.hide();
                menu_a.click(function (e) {
                    e.preventDefault();
                    if (!$(this).hasClass('active')) {
                        menu_a.removeClass('active');
                        menu_ul.filter(':visible').slideUp('normal');
                        $(this).addClass('active').next().stop(true, true).slideDown('normal');
                    } else {
                        $(this).removeClass('active');
                        $(this).next().stop(true, true).slideUp('normal');
                    }
                });

            });
        </script>
        @{Html.RenderAction("SidePanel", "Home");}
        <a class="view-all all-product" href="~/Products/ListProducts">VIEW ALL PRODUCTS<span> </span></a>
    </div>
    <div class="clearfix"> </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}